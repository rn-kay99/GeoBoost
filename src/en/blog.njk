---
layout: base.njk
title: GeoBoost Blog | KSB Labs
lang: en
permalink: /en/blog.html
pageType: blog
---

{% set t = translations[lang] %}
<link rel="stylesheet" href="/styles/blog.css"/>

<section class="blog-archive">
    <header class="blog-header">
        <div class="blog-header-bg">
            <div class="gradient-overlay"></div>
            <img src="/images/blog_background_dark.png"
                 data-light-src="/images/blog_background_light.png"
                 alt="Blog Header Background"
                 class="blog-bg-image"
                 loading="lazy">
        </div>
        <div class="container">
            <div class="blog-header-content">
                <h1 class="blog-title">
                    <span class="title-gradient">Blog</span>
                </h1>
                <p class="blog-subtitle">{{ t.blog_subtitle }}</p>
            </div>
        </div>
    </header>
    
    <div class="container">
        <div class="blog-controls">
            <div class="blog-sort">
                <div class="custom-select">
                    <select id="sortSelect">
                        <option value="date-newest">{{ t.blog_sortby_newest }}</option>
                        <option value="date-oldest">{{ t.blog_sortby_oldest }}</option>
                        <option value="title">{{ t.blog_sortby_title }}</option>
                        <option value="category">{{ t.blog_sortby_category }}</option>
                    </select>
                    <span class="select-arrow">â–¼</span>
                </div>
            </div>
            <div class="filter-tags" id="filterTags"></div>
        </div>
        
        <div class="blog-count" id="blogCount"></div>
        
        <div class="blog-grid" id="blogPostsContainer"></div>
        
        <div class="load-more">
            <button id="loadMoreBtn" class="modern-btn">{{ t.blog_load_more }}</button>
        </div>
    </div>
</section>

<script type="module" src="/scripts/blog.js"></script>